<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/pgbKhuyenMai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <LinearLayout
            android:id="@+id/lnKhuyenMai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgHinhKM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/backgroundplashscreen"
                />
            <TextView
                android:id="@+id/txtTenKhuyenMai"
                style="@style/TenDoiTuong"
                />
            <TextView
                android:id="@+id/txtBatDauKM"
                style="@style/ThoiGianKhuyenMai"
                android:gravity="left"/>
            <TextView
                android:id="@+id/txtKetThucKM"
                style="@style/ThoiGianKhuyenMai"
                android:gravity="right"/>
        </LinearLayout>
    </FrameLayout>



</android.support.v7.widget.CardView>